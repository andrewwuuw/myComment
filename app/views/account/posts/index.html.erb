<div class="col-md-12">

  <h2 class="text-center"> 我的所有文章 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 留言內容 </th>
        <th> 最後更新日期 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= simple_format(post.content) %> </td>
          <td> <%= post.updated_at.to_s %> </td>
          <td>
            <%= link_to("編輯", edit_post_path(post), class: "btn btn-danger btn-xs")%>
            <%= link_to("刪除", post_path(post), class: "btn btn-danger btn-xs", method: "delete", data: { confirm: "你確定要刪除嗎？" } )%>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
